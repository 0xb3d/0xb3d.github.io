/* Input field styling */
.hacker-input {
  background-color: rgba(20, 20, 20, 0.8);
  border: 1px solid var(--primary);
  color: var(--primary);
  padding: 0.75rem;
  font-family: 'Courier New', monospace;
}

.hacker-input:focus {
  outline: none;
  border-color: var(--accent);
  box-shadow: 0 0 5px rgba(255, 85, 85, 0.5);
}

/* Button styling */
.hacker-btn {
  background: linear-gradient(45deg, var(--primary), var(--secondary));
  color: black;
  font-weight: bold;
  border: none;
  padding: 0.75rem 1.5rem;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.hacker-btn:hover {
  background: linear-gradient(45deg, var(--accent), #ff0000);
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(255, 85, 85, 0.4);
}

.hacker-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: all 0.5s ease;
}

.hacker-btn:hover::before {
  left: 100%;
}

/* Status LED */
.status-led {
  display: inline-block;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: var(--primary);
  box-shadow: 0 0 5px var(--primary);
  margin-right: 8px;
  margin-bottom: 4px;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    opacity: 0.5;
  }

  50% {
    opacity: 1;
  }

  100% {
    opacity: 0.5;
  }
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .terminal-box {
    padding: 1rem;
  }
}